pipeline {
    agent any

    stages {
        stage('SCA-Safety') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    args '-u root'
                }
            }
            steps {
                script {
                    echo "üîç Ejecutando an√°lisis de dependencias con Safety..."

                    sh '''
                        set -e
                        apt-get update -qq
                        apt-get install -y --no-install-recommends build-essential libpq-dev

                        # Instalar Safety y dependencias del proyecto
                        pip install --disable-pip-version-check -q safety psycopg2-binary
                        if [ -f requirements.txt ]; then
                            pip install --disable-pip-version-check -q -r requirements.txt
                        else
                            echo "‚ö†Ô∏è No se encontr√≥ requirements.txt, ejecutando Safety sin archivo de dependencias"
                            echo "requests==2.25.0" > requirements.txt
                        fi

                        # Ejecutar Safety y generar el reporte
                        mkdir -p /tmp/reports
                        safety check \
                          --full-report \
                          --json \
                          --output=/tmp/reports/safety.json \
                          --file=requirements.txt || true

                        # Copiar el reporte al workspace del host Jenkins
                        cp /tmp/reports/safety.json "$WORKSPACE/safety.json" || echo "‚ö†Ô∏è No se gener√≥ safety.json"
                        echo "üìÇ Contenido del workspace:"
                        ls -l "$WORKSPACE"
                    '''

                    // Evaluar si hubo vulnerabilidades
                    def result = sh(script: "safety check --file=requirements.txt --exit-code", returnStatus: true)
                    if (result != 0) {
                        unstable(message: "‚ö†Ô∏è Vulnerabilidades detectadas por Safety")
                        // Si prefieres bloquear el pipeline:
                        // error("‚ùå Build bloqueado por vulnerabilidades cr√≠ticas detectadas por Safety")
                    }
                }
            }
        }

        stage('Compilation') {
            agent { docker { image 'php:8.2-cli' } }
            steps {
                sh 'echo "Compilando..."'
            }
        }

        stage('Build') {
            agent { docker { image 'php:8.2-cli' } }
            steps {
                sh 'echo "docker build -t my-php-app ."'
            }
        }

        stage('Deploy') {
            agent { docker { image 'php:8.2-cli' } }
            steps {
                sh 'echo "docker run my-php-app ."'
            }
        }
    }

    post {
        always {
            echo "üì¶ Archivando artefactos..."
            archiveArtifacts artifacts: 'safety.json', fingerprint: true
        }
    }
}
