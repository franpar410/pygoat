pipeline {
    agent any

    stages {

        stage('SCA-Safety') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    args '-u root -v /var/run/docker.sock:/var/run/docker.sock -v /var/jenkins_home:/var/jenkins_home'
                }
            }
            steps {
                script {
                    echo "ğŸ” Ejecutando anÃ¡lisis de dependencias con Safety..."

                    sh '''
                        apt-get update -qq
                        apt-get install -y --no-install-recommends gcc libpq-dev
                        pip install --disable-pip-version-check -q safety
                    '''

                    sh '''
                        if [ -f requirements.txt ]; then
                            echo "ğŸ“¦ Instalando dependencias desde requirements.txt..."
                            pip install --disable-pip-version-check -q -r requirements.txt
                        else
                            echo "âš ï¸ No se encontrÃ³ requirements.txt, creando uno temporal..."
                            echo "flask==2.0.1" > requirements.txt
                        fi
                    '''

                    sh '''
                        mkdir -p reports
                        echo "ğŸš€ Ejecutando anÃ¡lisis con Safety..."
                        safety check \
                            --full-report \
                            --json \
                            --output=reports/safety.json \
                            --file=requirements.txt || true

                        echo "âœ… Archivos generados:"
                        ls -l reports
                    '''

                    def result = sh(script: "safety check --file=requirements.txt --exit-code", returnStatus: true)
                    if (result != 0) {
                        unstable(message: "âš ï¸ Vulnerabilidades detectadas por Safety")
                        // Para bloquear el pipeline:
                        // error("Build bloqueado por vulnerabilidades crÃ­ticas")
                    }
                }
            }
        }

        stage('Compilation') {
            agent { docker { image 'php:8.2-cli' } }
            steps {
                sh 'echo "âš™ï¸ Compilando aplicaciÃ³n..."'
            }
        }

        stage('Build') {
            agent { docker { image 'php:8.2-cli' } }
            steps {
                sh 'echo "ğŸ—ï¸ Construyendo imagen Docker..."'
                sh 'echo "docker build -t my-php-app ."'
            }
        }

        stage('Deploy') {
            agent { docker { image 'php:8.2-cli' } }
            steps {
                sh 'echo "ğŸš€ Desplegando contenedor..."'
                sh 'echo "docker run my-php-app"'
            }
        }
    }

    post {
        always {
            echo "ğŸ“¦ Archivando artefactos..."
            archiveArtifacts artifacts: 'reports/safety.json', fingerprint: true, allowEmptyArchive: true
        }
        success {
            echo "âœ… Pipeline completado correctamente."
        }
        unstable {
            echo "âš ï¸ Pipeline marcado como inestable debido a vulnerabilidades detectadas."
        }
        failure {
            echo "âŒ Pipeline fallido."
        }
    }
}
