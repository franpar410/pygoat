pipeline {
    agent any

    stages {
        stage('SAST-Semgrep') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    args '-u root'
                }
            }
            steps {
                script {
                    sh '''
                        apt-get update && apt-get install -qq -y git
                        git config --global --add safe.directory $(pwd)
                        pip install -q semgrep
                    '''

                    // Ejecutamos Semgrep y capturamos errores, pero aseguramos que se genere un archivo JSON
                    try {
                        sh '''
                            semgrep scan --json-output=semgrep.json --error . || echo "{}" > semgrep.json
                        '''
                    } catch (err) {
                        unstable(message: "Semgrep encontró vulnerabilidades o falló el análisis")
                        // Si por algún motivo el archivo no se generó, crearlo vacío
                        sh 'test -f semgrep.json || echo "{}" > semgrep.json'
                    }
                }
            }
        }

        stage('Compilation') {
            agent {
                docker { image 'php:8.2-cli' }
            }
            steps {
                sh 'echo "Compilando..."'
            }
        }

        stage('Build') {
            agent {
                docker { image 'php:8.2-cli' }
            }
            steps {
                sh 'echo "docker build -t my-php-app ."'
            }
        }

        stage('Deploy') {
            agent {
                docker { image 'php:8.2-cli' }
            }
            steps {
                sh 'echo "docker run my-php-app ."'
            }
        }
    }

    post {
        always {
            // Archiva el artefacto aunque esté vacío
            archiveArtifacts artifacts: 'semgrep.json', allowEmptyArchive: true, fingerprint: true
            echo '✅ Archivo semgrep.json archivado (aunque esté vacío o sin findings)'
        }
    }
}
