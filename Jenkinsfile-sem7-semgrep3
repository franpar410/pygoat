pipeline {
    agent any

    stages {
        stage('SAST-Semgrep') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    args '-u root'
                }
            }
            steps {
                script {
                    // Instalación y configuración básica
                    sh '''
                        set -eux
                        apt-get update && apt-get install -qq -y git
                        git config --global --add safe.directory $(pwd)
                        pip install -q semgrep
                    '''

                    // Ejecutar Semgrep, siempre generando el archivo semgrep.json
                    // y asegurando que quede en el workspace visible
                    sh '''
                        echo "Ejecutando análisis con Semgrep..."
                        semgrep scan --json-output=semgrep.json --error . \
                        || echo '{"error": "Semgrep failed or found issues"}' > semgrep.json

                        # Verificamos y mostramos si el archivo existe
                        ls -l semgrep.json || echo "semgrep.json no existe!"
                    '''
                }
            }
        }

        stage('Compilation') {
            agent {
                docker { image 'php:8.2-cli' }
            }
            steps {
                sh 'echo "Compilando..."'
            }
        }

        stage('Build') {
            agent {
                docker { image 'php:8.2-cli' }
            }
            steps {
                sh 'echo "Construyendo imagen my-php-app..."'
            }
        }

        stage('Deploy') {
            agent {
                docker { image 'php:8.2-cli' }
            }
            steps {
                sh 'echo "Desplegando contenedor my-php-app..."'
            }
        }
    }

    post {
        always {
            // Garantizamos que semgrep.json exista antes de archivarlo
            script {
                sh 'test -f semgrep.json || echo "{}" > semgrep.json'
            }

            archiveArtifacts artifacts: 'semgrep.json', allowEmptyArchive: true, fingerprint: true
            echo '✅ Artefacto semgrep.json archivado correctamente.'
        }
    }
}
